@model IEnumerable<FichaAluno.Models.Domain.AlunoModel>
@{
    ViewData["Title"] = "Tabela de Alunos";
}

<div class="justify-content-center">

    <div class="d-flex justify-content-between align-items-center mb-5" style="border-bottom: 6px solid #A9A9A9	;">
        <h1>Tabela de Alunos</h1>
        <a class="btn mx-4 style-color-buttons" style="color: white;  padding: 10px 24px; font-size: 20px; line-height: 1.5;" asp-controller="Aluno" asp-action="Formulario">Adicionar aluno</a>
    </div>


<br />

    <div class="container">


        <form asp-controller="Aluno" asp-action="Index" method="post">
            <div class="mb-3 align-items-center text-left">
                <label style="color: black; font-weight: bold;" class="form-label">Opção de busca:</label>
                <input type="radio" name="opcaoBusca" value="matricula" /> Matrícula
                <input type="radio" name="opcaoBusca" value="nome" />Nome
                <div class="input-group">
                    <input type="text" name="valorBusca" class="form-control" placeholder="Matrícula ou nome do aluno...">
                    <div class="input-group-append">
                        <button type="submit" class="btn style-color-buttons" style="color: white">Buscar</button>
                    </div>
                </div>
            </div>
        </form>


        <table class="table table-striped  table-hover table-bordered border-with text-left container align-content-center">
            <thead class="color-up-table align-content-center">
                <tr>
                    <th scope="col">Matricula</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Data de nascimento</th>
                    <th scope="col">CPF</th>
                    <th scope="col">Opções</th>
                </tr>
            </thead>
            <tbody class="table-group-divider align-content-center">
                @if(Model != null)
                {
                    @foreach(var aluno in Model)
                    {
                        <tr>
                            <td>@aluno.MATRICULA</td>
                            <td>@aluno.NOME</td>
                            <td>@aluno.SEXO</td>
                            <td>@aluno.NASCIMENTO_FORMATADO</td>
                            <td>@aluno.CPF</td>
                            <td>
                                <a asp-controller="Aluno" asp-action="Formulario" asp-route-id="@aluno.MATRICULA" class="btn border-white   style-color-buttons" style="color: white"><i class="material-icons">edit</i>Editar</a>
                                <a data-aluno-id="@aluno.MATRICULA"  asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.MATRICULA" class="btn btn-secondary border-white delete-button"><i class="material-icons">delete</i>Excluir</a>
                            </td>
                        </tr>
                    }
                }
                

            </tbody>
        </table>
    </div>


</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmação de Exclusão</h5>
                <button type="button" asp-controller="Aluno" asp-action="Index" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Tem certeza de que deseja excluir este aluno?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary close" data-dismiss="modal" asp-controller="Aluno" asp-action="Index">Não</button>
                <a id="deleteButton" class="btn btn-primary">Sim</a>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        // Quando o botão de exclusão é clicado
        $('.delete-button').click(function (e) {
            e.preventDefault();

            // Obter o ID do aluno
            var alunoId = $(this).data('aluno-id');

            // Definir o href do botão de confirmação na modal
            $('#deleteButton').attr('href', '/Aluno/Excluir/' + alunoId);

            // Mostrar a modal
            $('#confirmDeleteModal').modal('show');
        });
    });

    $(document).ready(function () {
        // Quando o botão de fechar é clicado
        $('.close').click(function (e) {
            e.preventDefault();

            // Redirecionar para a página de alunos
            window.location.href = '/Aluno';
        });
    });


</script>